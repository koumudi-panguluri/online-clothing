<h1 style="font-family:Snell Roundhand, cursive;color :white;" ><center><em>Orders</em></center></h1>


<div class="row" style="margin-right:0px;margin-left:50px;margin-top:50px;position: relative;left: 30px;float:left;background-color:#360568">
  
<div class="card" style="width: 18rem;background-color:#B17F94">
  <img style="border-radius:8px;width:95%;height:350px;padding-left:20px;padding-top:15px;border-radius:8px" src="/img/{{orders}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{orderpicName}}</h5>
    
     <p class="card-text" style="margin-left: 50px;color:#260230"><b><em>Order Successfully</em></b></p>
   <a href="/ideas/paymentorder" style="float:left;display:inline; margin-left: 70px;" class="btn btn-success">Payment</a>
    

  </div>


  </div>
  </div>


 {{#each order}}

<div class="row" style="margin-right:0px;margin-left:50px;margin-top:50px;position: relative;left: 30px;float:left;background-color:#360568">
  
<div class="card" style="width: 18rem;background-color:#B17F94">
  <img style="border-radius:8px;width:95%;height:350px;padding-left:20px;padding-top:15px;border-radius:8px" src="/img/{{name}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{picName}}</h5>
    <p class="card-text" style="margin-left: 50px;color:#260230"><b><em>Ordered Successfully</em></b></p>
    
   <a href="#" style="float:left;display:inline; margin-left: 70px;" class="btn btn-warning">Delivered</a>
    

  </div>


  </div>
  </div>
  {{/each}}
